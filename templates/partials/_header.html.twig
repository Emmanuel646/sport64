          {% if app.user %}
            {% if is_granted("ROLE_ADMIN") %}
              <button class="btn btn-dark m-2 my-sm-0" type="button">
                <a class="btn btn-info" href="{{ path('app_register') }}" role="button">Inscription d'un<br>nouvel utilisateur</a>
              </button>
              <button class="btn btn-dark ms-2 my-sm-0" type="button">
                <a class="btn btn-danger" href="{{ path('app_logout') }}" role="button" onclick="disconnectConfirm()">Se déconnecter</a>
              </button>
              {% else %}
                <button class="btn btn-dark ms-2 my-sm-0" type="button">
                  <a class="btn btn-danger" href="{{ path('app_logout') }}" role="button" onclick="disconnectConfirm()">Se déconnecter</a>
                </button>
                {% endif %}
          {% else %}
          <button class="btn btn-dark ms-2 my-sm-0" type="button">
            <a class="btn btn-success" href="{{ path('app_login') }}" role="button">Se connecter</a>
