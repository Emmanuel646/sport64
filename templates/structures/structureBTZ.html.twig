{% extends 'base.html.twig' %}


{% block body %}

    <h2 class="homepage mt-3">Salle de sport ANGLET - SPORT64</h2>


    <section class="container">
        <div class="row">
            <div class="col">
                <div class="col-12 d-inline-flex mt-2 justify-content-center">
                    <div class="col-xl-4 col-lg-6 me-1">
                        <h2>ANGLET CENTRE</h2>
                        <img src={{ asset('assets/images/sport1.jpg') }} width="100%" height="230px">
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-light"
                                    type="button">
                                <a class="btn btn-outline-primary m-4" href="{{ path('structureUserAnglet1') }}">Accéder à la structure</a></button>
                        </div>
                        {% if is_granted("ROLE_FRANCHISE") %}
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-success form-switch" type="button">Activer</button>
                            <button class="btn btn-danger form-switch ms-2" type="button">Désactiver</button>
                        </div>
                        {% endif %}
                    </div>
                    <div class="col-xl-4 col-lg-6 me-1">
                        <h2>ANGLET PIGNADA</h2>
                        <img src={{ asset('assets/images/sport2.jpg') }} width="100%" height="230px">
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-light"
                                    type="button">
                                <a class="btn btn-outline-primary m-4" href="{{ path('structureUserAnglet2') }}">Accéder à la structure</a></button>
                        </div>
                        {% if is_granted("ROLE_FRANCHISE") %}
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-success form-switch" type="button">Activer</button>
                                <button class="btn btn-danger form-switch ms-2" type="button">Désactiver</button>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>




{% endblock %}