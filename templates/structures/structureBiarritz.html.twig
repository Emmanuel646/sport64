{% extends 'base.html.twig' %}


{% block body %}

    <h2 class="homepage">Bienvenue sur votre salle de sport Biarritz - rue Pringle</h2>
    <div class="d-flex justify-content-center">
        <a href="{{ path('structureBTZ') }}" class="btn btn-outline-dark" type="button">Retourner à la page de la franchise de Biarritz</a>
    </div>

    <section class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="col-12 d-inline-flex mt-3 justify-content-center">
                    <img src={{ asset('assets/images/sport1.jpg') }} width="20%" height="200px">
                    <div class=" ms-5">
                        <h3 class="mt-4">SPORT 64 - Biarritz</h3>
                        <p>rue pringle<br>
                            64200 BIARRITZ<br>
                            <br>
                            Tel : 05.59.12.34.56<br>
                            mail: sport64.biarritz003@example.com
                        </p>
                    </div>
                </div>
                <div class="col-12 d-inline-flex m-2 justify-content-center">
                    <form>
                        <ul class="list-group ps-5 mt-4">
                            {% if is_granted("ROLE_ADMIN") %}
                                <a href="{{ path('app_option') }}" class="btn btn-success">Modifier Contrat</a>
                            {% else %}
                                <form>
                                    <div class="d-inline-flex">
                                        <button class="btn btn-success m-2" type="button" href="#">Accéder au planning salariés</button>
                                        <button class="btn btn-success m-2" type="button" href="#">Accéder à la gestion des locations de matériels</button>
                                        <button class="btn btn-success m-2" type="button" href="#">Accéder à la gestion des stocks</button>
                                        <button class="btn btn-success m-2" type="button" href="#">Accéder à la gestion d'abonnement</button>

                                    </div>

                                </form>
                            {% endif %}
                        </ul>
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}