{% extends 'base.html.twig' %}


{% block body %}

    <h2 class="homepage mt-3">Salle de sport ST JEAN DE LUZ - SPORT64</h2>
    <div class="d-flex justify-content-center">
        <a href="{{ path('home') }}" class="btn btn-outline-dark" type="button">Retourner à la page d'accueil</a>
    </div>

    <section class="container">
        <div class="row">
            <div class="col">
                <div class="col-12 d-inline-flex mt-2 justify-content-center">
                    <div class="col-xl-4 col-lg-6 me-1">
                        <h2>004 - RUE GAMBETTA</h2>
                        <img src={{ asset('assets/images/sport1.jpg') }} width="100%" height="230px">
                        {% if is_granted("ROLE_ADMIN") %}
                        <div class="d-block justify-content-center mt-3">
                            <button class="btn btn-success me-2" width="50px" type="submit" onclick="activeConfirme()">
                                Activer la structure
                            </button>
                            <button class="btn btn-danger" width="50px" type="submit" onclick="desactiveConfirme()">
                                Désactiver la structure
                            </button>
                            <button class="btn btn-light"
                                    type="button">
                                <a class="btn btn-outline-primary m-4" href="{{ path('structureUserStJean') }}">Accéder à la structure<br>RUE GAMBETTA</a></button>

                            {% else %}
                            <button class="btn btn-light"
                                    type="button">
                                <a class="btn btn-outline-primary m-4" href="{{ path('structureUserStJean') }}">Accéder à la structure<br>RUE GAMBETTA</a></button>
                        </div>
                        {% endif %}
                        {% if is_granted("ROLE_ADMIN") %}
                        <h3 class="p-1, justify-content-center">Permission Global</h3>
                        <div class="row-cols-auto d-inline-flex mt-2 justify-content-center">
                            <form>
                                <ul class="d-inline-flex list-group-item m-auto">
                                    <div class="m-3">
                                        <input type="checkbox" id="plansalarie" name="salarie">
                                        <label for="plansalarie">Gestion des plannings salariés</label>
                                    </div>
                                    <div class="m-3">
                                        <input type="checkbox" id="cardabonne" name="abonnement">
                                        <label for="cardabonne">Gestion des abonnements</label>
                                    </div>
                                    <div class="m-3">
                                        <input type="checkbox" id="buy" name="gestionstock">
                                        <label for="buy">Gestion des stocks</label>
                                    </div>
                                    <div class="m-3">
                                        <input type="checkbox" id="materiel" name="materiel">
                                        <label for="materiel">Gestion du matériel</label>
                                    </div>
                                </ul>
                                <div class="d-inline-flex justify-content-center mt-3">
                                    <button class="btn btn-success me-2" width="50px" type="submit">
                                        Valider les options
                                    </button>
                                    <button class="btn btn-danger" width="50px" type="submit">
                                        Annuler
                                    </button>
                                </div>
                            </form>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>




{% endblock %}