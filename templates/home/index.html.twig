{% extends 'base.html.twig' %}


{% block body %}

    <h2 class="homepage mt-3">Structure salle de sport SPORT64</h2>
  

    <section class="container">
        <div class="row">
            <div class="col">
                <div class="col-12 d-inline-flex mt-2 justify-content-center">

                    <div class="col-xl-4 col-lg-6 me-1">
                        <h3 class="justify-content-center">ANGLET</h3>
                        <img src={{ asset('assets/images/sport1.jpg') }} width="100%" height="230px">
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-light"
                                    type="button">
                                <a class="btn btn-outline-primary m-4" href="{{ path('structureAnglet') }}">Accéder à la franchise d'Anglet</a></button>
                        </div>
                    </div>

                    <div class="col-xl-4 col-lg-6 me-1">
                        <h3 class="justify-content-center">BIARRITZ</h3>
                        <img src={{ asset('assets/images/sport5.jpg') }} width="100%" height="230px">
                        <div class="d-flex justify-content-center">
                                <button class="btn btn-light"
                                        type="button">
                                <a class="btn btn-outline-primary m-4" href="{{ path('structureBTZ') }}">Accéder à la franchise de Biarritz</a></button>

                        </div>
                    </div>
                    <div class="col-xl-4 col-lg-6">
                        <h3 class="justify-content-center">ST JEAN DE LUZ</h3>
                        <img src={{ asset('assets/images/sport4.jpg') }} width="100%" height="230px">
                        <div class="d-flex justify-content-center">
                                <button class="btn btn-light"
                                        type="button">
                                <a class="btn btn-outline-primary m-4" href="{{ path('structureSTJEAN') }}">Accéder à la Franchise de St Jean de Luz</a></button>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    {% if app.user %}
                        {% if is_granted("ROLE_ADMIN") %}
                        <p>Vous êtes connecté en tant qu'Administrateur !</p>
                            {% else %}
                                <p>Vous êtes connecté !</p>
                                {% endif %}
                    {% else %}

                    {% endif %}
                </div>
            </div>
        </div>
    </section>


  

{% endblock %}